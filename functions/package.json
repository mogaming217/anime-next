{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.prod.json",
    "build": "tsc --build tsconfig.prod.json",
    "test": "jest",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "setEnv:dev": "ts-node script/setEnvVars.ts dev",
    "setEnv:prod": "ts-node script/setEnvVars.ts prod"
  },
  "engines": {
    "node": "10"
  },
  "main": "build/index.js",
  "dependencies": {
    "axios": "^0.19.2",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "child_process": "^1.0.2",
    "firebase-functions-test": "^0.2.1",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "private": true,
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
