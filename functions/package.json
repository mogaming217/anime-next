{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "build": "tsc --build tsconfig.prod.json",
    "test": "jest",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "setEnv:dev": "ts-node src/script/setEnvVars.ts dev",
    "setEnv:prod": "ts-node src/script/setEnvVars.ts prod",
    "deploy:dev": "firebase deploy -P dev --only functions",
    "deploy:prod": "firebase deploy -P prod --only functions",
    "deploy:rules:dev": "firebase deploy -P dev --only firestore:rules",
    "deploy:rules:prod": "firebase deploy -P prod --only firestore:rules"
  },
  "engines": {
    "node": "10"
  },
  "main": "build/index.js",
  "dependencies": {
    "algoliasearch": "^4.3.1",
    "axios": "^0.21.1",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^3.8.0",
    "paapi5-nodejs-sdk": "^1.1.0"
  },
  "devDependencies": {
    "@types/algoliasearch": "^3.34.10",
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "child_process": "^1.0.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "firebase-functions-test": "^0.2.1",
    "jest": "^26.1.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  },
  "private": true,
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
