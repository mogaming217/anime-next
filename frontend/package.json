{
  "name": "animenext",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf .next && rm -rf dist",
    "dev": "npm run copy-static && cross-env APP_ENV=local next",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:dev": "firebase use dev && cross-env APP_ENV=dev npm run deploy",
    "deploy:prod": "firebase use prod && cross-env APP_ENV=prod npm run deploy && firebase use dev",
    "build": "npm run clean && npm run build:next",
    "build:next": "next build && npm run copy-static",
    "start:localDocker": "cross-env APP_ENV=local npm run build && docker build -t animenext . && docker run -e PORT=3000 -e APP_ENV=local -p 3000:3000 animenext",
    "start": "cross-env NODE_ENV=production next start -p $PORT",
    "copy-static": "cpx \"public/{**,.**}/{*,.*}\" \".next/static\"",
    "gcloud:build": "gcloud --project $GCLOUD_PROJECT builds submit --tag gcr.io/$GCLOUD_PROJECT/renderer",
    "gcloud:run": "gcloud --project $GCLOUD_PROJECT run deploy renderer --platform managed --region asia-northeast1 --set-env-vars TZ=Asia/Tokyo,APP_ENV=$APP_ENV --image gcr.io/$GCLOUD_PROJECT/renderer",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix"
  },
  "dependencies": {
    "algoliasearch": "^4.8.4",
    "basic-auth": "^2.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "firebase": "^8.2.3",
    "firebase-admin": "^9.4.2",
    "next": "^11.1.1",
    "next-seo": "^4.17.0",
    "nextjs-progressbar": "0.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-hook-form": "^6.14.2",
    "react-loader-spinner": "^3.1.14",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@types/algoliasearch": "^3.34.11",
    "@types/basic-auth": "^1.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-loader-spinner": "^3.1.3",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "cpx": "^1.5.0",
    "dotenv-webpack": "^6.0.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "typescript-styled-plugin": "^0.15.0"
  }
}
