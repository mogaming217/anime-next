{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "frontend/.next/static",
    "rewrites": [
      {
        "source": "**/**",
        "run": {
          "serviceId": "renderer",
          "region": "asia-northeast1"
        }
      }
    ],
    "postdeploy": [
      "npm run gcloud:build",
      "npm run gcloud:run"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
